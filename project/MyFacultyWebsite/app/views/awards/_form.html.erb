<div class='row'>
  <div class='span5 offset1'>
<%= form_for(@award) do |f| %>
  <%= render '/shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :issuer %><br>
    <%= f.text_field :issuer %>
  </div>
  <div class="field">
    <%= f.label :issue_date %><br>
    <%= f.date_select :issue_date, { :start_year => Date.today.year-70, :end_year => Date.today.year } %>
  </div>
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
</div>