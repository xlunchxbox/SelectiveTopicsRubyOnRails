<div class='main_content'>
  <h2>Courses</h2>
  <% @courses.each do |course| %>
    <strong>
      <%= best_in_place_if signed_in?, course, :course_no%>: <%= best_in_place_if signed_in? ,course, :name %>
    </strong>
    <p class='dates'>
		<%= best_in_place_if signed_in?, course, :term %> <%= best_in_place_if signed_in?, course, :year %>
    </p>
    <p>
    <%= best_in_place_if signed_in?, course, :summary %>
    </p>
	<%= link_to raw("<i class=\"icon-bin icon-white\"></i> Remove"), course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' if signed_in? %>
    <hr>
  <% end %>

  <% if signed_in?%>
  	<p>*Click on fields to edit*</p>
  <% end %>

  <%= link_to 'Add course', new_course_path, class: 'btn' if signed_in? %>
</div>
