<%= form_for(@work_order, :remote => true) do |f| %>
  <% if @work_order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@work_order.errors.count, "error") %> prohibited this work_order from being saved:</h2>

      <ul>
      <% @work_order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, options_for_select(status_list)%>
	
  </div>
  
  <div class="field">
	  <%= f.label :worker %>
	  <%= f.select :worker_id, Worker.all.map {|worker| [worker.first_name, worker.id]} %>
  </div>
  
  <div class="actions">
    <%= f.submit "Submit", :class => "btn btn-primary btn-large"%>
  </div>
<% end %>
