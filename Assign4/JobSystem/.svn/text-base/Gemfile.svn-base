source 'https://rubygems.org'

gem 'rails', '4.0.0'
gem 'simplecov'
gem 'sqlite3'
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

gem 'best_in_place', github: 'aaronchi/best_in_place'

gem "will_paginate", "~> 3.0.4"

group :doc do
  gem 'sdoc', require: false
end

group :development do
	gem 'rspec-rails'
	gem 'annotate'
end

group :test do
	gem 'rspec'
	gem 'webrat'
	gem 'capybara'
	gem 'guard-rspec'
end