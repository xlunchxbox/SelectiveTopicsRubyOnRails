<center>
<h1>Details for <%= @worker.first_name %> <%= @worker.last_name %></h1>
<br/><br/>
<h2>Assigned Work Orders</h2>

<table class = "table table-bordered table-striped table table-hover pretty">
    <tr>
	  <th>Worker</th>
      <th>Details</th>
      <th>Status</th>
    </tr>

  <tbody>
    <% @worker.work_orders.each do |worker| %>
      <tr>
  		<td><%= worker.worker.first_name %> <%= worker.worker.last_name %></td>
          <td><%= worker.details %></td>
          <td><%= worker.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_worker_path(@worker) %> |
<%= link_to 'Back', root_path %>
</center>